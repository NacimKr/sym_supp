{% extends 'base.html.twig' %}

{% block title "Recette de " ~ recipe.title | default("") %}

{% block body %}
    <h1>{{ recipe.title | default('') }}</h1>
    <p>{{ recipe.content | default('') }}</p>
    <a href="{{ asset('uploads/brochures/' ~ recipe.brochureFilename | default('')) }}">View brochure (PDF)</a>
{% endblock %}
